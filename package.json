{
  "private": true,
  "name": "sparks.network",
  "version": "0.0.0",
  "description": "Sparks.Network Volunteer SPA",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SparksNetwork/Sparks.Network.git"
  },
  "author": "Sparks.Network <help@sparks.network> (https://github.com/SparksNetwork)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SparksNetwork/Sparks.Network/issues"
  },
  "homepage": "https://github.com/SparksNetwork/Sparks.Network#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "node ./node_modules/.bin/validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": "*"
    }
  },
  "scripts": {
    "clean": "rimraf dist/bundle* dist/*.svg tests/.tmp .tmp .screens report",
    "start": "ts-node ./node_modules/.bin/webpack-dev-server --config .config/webpack.config.ts",
    "serve": "npm start",
    "serve-static": "pushstate-server dist 8080",
    "test:ci": "npm test && npm run test:e2e-ci -- -e default,firefox",
    "test:lint": "tslint src/*.ts src/**/*.ts src/**/**/*.ts src/**/**/**/*.ts src/**/**/**/**/*.ts",
    "test:unit": "npm run clean && mocha-webpack --webpack-config .config/webpack.test.ts 'src/**/*.test.ts'",
    "test:int": "npm run clean && mocha-webpack --webpack-config .config/webpack.int.ts 'src/**/*.int.ts'",
    "test:e2e": "npm run build:e2e && cross-env TS_NODE_PROJECT=./tests/tsconfig.json LOCAL=true ts-node ./node_modules/.bin/nightwatch -c .config/nightwatch.ts --skiptags wip",
    "test:e2e-ci": "npm run build:e2e && cross-env TS_NODE_PROJECT=./tests/tsconfig.json LOCAL=true ts-node ./node_modules/.bin/nightwatch -c .config/nightwatch.ts --skiptags noci",
    "test": "npm run test:lint && npm run test:unit && npm run test:int && npm run clean",
    "sauce": "npm run build:e2e && cross-env TS_NODE_PROJECT=tests/tsconfig.json ts-node ./node_modules/.bin/nightwatch -c .config/nightwatch.ts --env android,iphone,safari",
    "build:e2e": "npm run clean && tsc -P tests/tsconfig.json && cp ./tests/features/*.feature ./tests/.tmp/features",
    "build": "ts-node ./node_modules/.bin/webpack --config .config/webpack.config.ts",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@motorcycle/tslint": "^1.3.0",
    "@types/chai": "^3.4.34",
    "@types/i18next": "^2.3.34",
    "@types/i18next-xhr-backend": "^1.2.2",
    "@types/mocha": "^2.2.33",
    "@types/node": "0.0.2",
    "@types/ramda": "0.0.2",
    "@types/sinon": "^1.16.32",
    "@types/webpack": "^2.0.0",
    "@types/webpack-dev-server": "^1.12.5",
    "chromedriver": "^2.25.2",
    "commitizen": "^2.8.6",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.1",
    "cucumber": "2.0.0-rc.3",
    "cz-conventional-changelog": "^1.2.0",
    "firebase-admin": "^4.0.4",
    "geckodriver": "^1.2.0",
    "ghooks": "^1.3.2",
    "image-webpack-loader": "^3.0.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "mocha-webpack": "^0.7.0",
    "nightwatch": "^0.9.9",
    "nightwatch-cucumber": "^6.1.1",
    "node-sass": "^3.13.0",
    "null-loader": "^0.1.1",
    "pushstate-server": "^2.1.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "sauceconnect-runner": "^0.2.2",
    "selenium-server": "^3.0.1",
    "sinon": "^1.17.6",
    "sparks-design-system": "^0.8.0",
    "style-loader": "^0.13.1",
    "ts-loader": "^1.3.1",
    "ts-node": "^1.7.0",
    "tslint": "^4.0.2",
    "typescript": "^2.1.4",
    "validate-commit-msg": "^2.8.2",
    "webpack": "^2.1.0-beta.27",
    "webpack-dev-server": "^2.1.0-beta.12",
    "webpack-node-externals": "^1.5.4"
  },
  "dependencies": {
    "@most/create": "^2.0.1",
    "@most/hold": "^1.4.3",
    "@motorcycle/core": "^2.1.0",
    "@motorcycle/dom": "^6.6.0",
    "@motorcycle/history": "^4.1.0",
    "@motorcycle/i18n": "^1.0.8",
    "@motorcycle/router": "^4.1.0",
    "firebase": "^3.6.4",
    "i18next-xhr-backend": "^1.2.1",
    "most": "^1.1.1",
    "most-combineobj": "^1.0.0",
    "ramda": "^0.22.1",
    "sparks-design-system": "^0.8.0"
  }
}
